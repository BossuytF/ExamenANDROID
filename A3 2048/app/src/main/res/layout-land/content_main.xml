<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,1"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center">

    <TableRow>
        <Button  android:id="@+id/cont_btn" android:text="@string/cont_btn_txt" android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button  android:id="@+id/new_game_btn" android:text="@string/new_game_btn_txt" android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
        <Button  android:id="@+id/about_btn" android:text="@string/about_btn_txt" android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button  android:id="@+id/exit_btn" android:text="@string/exit_btn_txt" android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

</TableLayout>